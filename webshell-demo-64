<body>
  <h1>EDM Base64 Submit Demo</h1>

  <input type="text" id="base64Input" placeholder="Paste Base64 string here..." />
  <br>
  <button onclick="submitData()">üöÄ Submit to Webhook</button>

  <div id="status"></div>

  <script>
    function submitData() {
      const b64 = document.getElementById("base64Input").value;
      const webhookUrl = "https://webhook.site/12c74b14-80e6-4bce-9678-184713c0058c"; // üîÅ Replace with your actual webhook URL

      fetch(webhookUrl, {
        method: "POST",
        headers: {
          "Content-Type": "application/x-www-form-urlencoded"
        },
        body: "payload=" + encodeURIComponent(b64)
      })
      .then(() => {
        document.getElementById("status").innerText = "‚úÖ Submitted: " + b64;
      })
      .catch(err => {
        document.getElementById("status").innerText = "‚ùå Error: " + err;
      });
    }
  </script>
</body>
