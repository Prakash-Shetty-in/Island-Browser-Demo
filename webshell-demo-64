<body>
  <h1>EDM DLP Base64 Submit</h1>

  <input type="text" id="b64Input" placeholder="Paste base64 string here..." />
  <br />
  <button onclick="sendToWebhook()">Submit</button>
  <div id="status"></div>

  <script>
    function sendToWebhook() {
      const base64 = document.getElementById("b64Input").value;
      const webhookUrl = "https://webhook.site/YOUR-ID"; // üîÅ Replace with your actual webhook URL

      fetch(webhookUrl, {
        method: "POST",
        headers: {
          "Content-Type": "application/x-www-form-urlencoded"
        },
        body: "data=" + encodeURIComponent(base64)
      })
      .then(response => {
        document.getElementById("status").innerText = "‚úÖ Submitted: " + base64;
      })
      .catch(error => {
        document.getElementById("status").innerText = "‚ùå Error: " + error;
      });
    }
  </script>
</body>
