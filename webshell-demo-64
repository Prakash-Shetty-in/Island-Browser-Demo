<body>
  <h1>EDM Base64 Submit</h1>
  <input type="text" id="b64" placeholder="Paste base64 here (e.g. Y2F0IC9ldGMvcGFzc3dk)">
  <br>
  <button onclick="submitBase64()">Submit to Webhook</button>
  <div id="status"></div>

  <script>
    function submitBase64() {
      const base64 = document.getElementById("b64").value.trim();
      const webhookURL = "https://webhook.site/YOUR-ID"; // üîÅ Replace this with your actual webhook.site URL

      fetch(webhookURL, {
        method: "POST",
        headers: {
          "Content-Type": "application/x-www-form-urlencoded"
        },
        body: "data=" + encodeURIComponent(base64)
      })
      .then(() => {
        document.getElementById("status").innerText = "‚úÖ Submitted: " + base64;
      })
      .catch(err => {
        document.getElementById("status").innerText = "‚ùå Error: " + err;
      });
    }
  </script>
</body>
</html>
