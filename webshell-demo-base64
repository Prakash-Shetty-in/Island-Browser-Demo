  <script>
    function decodeAndSend() {
      const base64String = "Y2F0IC9ldGMvcGFzc3dk"; // 👈 This is "cat /etc/passwd" base64-encoded
      const decoded = atob(base64String); // decode base64
      document.getElementById("decodedData").value = decoded;
    }
  </script>
